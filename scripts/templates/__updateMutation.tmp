import {
  GraphQLBoolean,
  GraphQLFloat,
  GraphQLID,
  GraphQLInt,
  GraphQLList,
  GraphQLNonNull,
  GraphQLObjectType,
  GraphQLSchema,
  GraphQLString
} from 'graphql';

import {
  mutationWithClientMutationId,
} from 'graphql-relay';

import IoC from 'AppIoC';

export const updateMutation = (commandExecuter, update{{ModelName}}Command, {{modelName}}Type, errorType) => mutationWithClientMutationId({
  name: 'Update{{ModelName}}',
  inputFields: {
    id: { type: new GraphQLNonNull(GraphQLString) },
    name: { type: new GraphQLNonNull(GraphQLString) },
  },
  outputFields: {
    {{modelName}}: { type: {{modelName}}Type },
    error: { type: errorType },
  },
  mutateAndGetPayload: async ({id, ...attrs}, { viewer }) => {
    try {
      const {{modelName}} = await commandExecuter.execute(update{{ModelName}}Command, id, viewer, attrs);
      return { {{modelName}} };
    } catch(e) {
      return { error: e.toObject() };
    }
  }
});

IoC.callable('updateMutation', ['commandExecuter', 'update{{ModelName}}Command', '{{modelName}}Type', 'errorType'], updateMutation);
