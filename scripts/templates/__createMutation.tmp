import {
  GraphQLBoolean,
  GraphQLFloat,
  GraphQLID,
  GraphQLInt,
  GraphQLList,
  GraphQLNonNull,
  GraphQLObjectType,
  GraphQLSchema,
  GraphQLString
} from 'graphql';

import {
  mutationWithClientMutationId,
} from 'graphql-relay';

import IoC from 'AppIoC';

export const createMutation = (commandExecuter, create{{ModelName}}Command, {{modelName}}Type, errorType) => mutationWithClientMutationId({
  name: 'Create{{ModelName}}',
  inputFields: {
    name: { type: new GraphQLNonNull(GraphQLString) },
  },
  outputFields: {
    {{modelName}}: { type: {{modelName}}Type },
    error: { type: errorType },
  },
  mutateAndGetPayload: async (attrs, { viewer }) => {
    try {
      const {{modelName}} = await commandExecuter.execute(create{{ModelName}}Command, viewer, attrs);
      return { {{modelName}} };
    } catch(e) {
      return { error: e.toObject() };
    }
  }
});

IoC.callable('createMutation', ['commandExecuter', 'create{{ModelName}}Command', '{{modelName}}Type', 'errorType'], createMutation);
